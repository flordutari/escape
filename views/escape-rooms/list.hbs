<div class="events-list">
  {{> navbar}}
  <div class="events">
    <h1>Escape Rooms List</h1>
    <hr>
    <ul>
      {{#each escapeRoom}}
        <li>
          <img src="{{this.image}}" alt="{{this.name}}">
          <p class="name">{{this.name}}</p>
          {{!-- <a href="/movies/{{this.id}}">See more</a> --}}
          <a class="join" href="/escape/{{this._id}}">Create Event</a>
        </li>
      {{/each}}
    </ul>
  </div>
  <div id="footer" class="escapes-link">
    <a href="../events/list">Events list</a>
  </div>
</div>
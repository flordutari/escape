{{!-- {{#> view/layout header="CSS Miguel" }} --}}

<div class="events-list">
  {{> navbar}}
  <div class="events">
    <div class="title">
      <h1>EVENTS</h1>
      <hr>
    </div>
    <ul class="list">
      {{#each events}}
        <li>
          <div class="card-image">
            <a href="/events/{{this._id}}"><img src="{{this.escapeRoom.image}}" alt="{{this.escapeRoom.name}} image"></a>
          </div>
          <div id="card-content">
            <div class="p">
              <p class="name">{{this.escapeRoom.name}}</p>
            </div>
            <div class="p">
              <i class="far fa-calendar-alt"></i>
              <p class="details">{{this.date}}</p>
            </div>
            <div class="p">
              <i class="far fa-clock"></i>
              <p class="details">{{this.showtime}}</p>
            </div>
            <div class="p">
              <i class="fas fa-user-ninja"></i>
              <p class="details">{{this.creator.username}}</p>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
  <div id="footer" class="escapes-link">
    <a href="../escape/list">Escape Rooms</a>
  </div>
</div>

<div class="container login-signup">
  <img class="escape-room-logo" src="https://res.cloudinary.com/drkujr1xv/image/upload/v1552472710/project_2_images/logo_rosa_pastel.png" alt="logo">
  <form action="/auth/login" method="POST">
    <div class="field line">
      <label>Username</label>
      <input type="text" name="username">
    </div>

    <div class="field line">
      <label>Password</label>
      <input type="password" name="password">
    </div>

    <div class="field submit">
      <button class="join" type="submit">Login</button>
    </div>

    <a href="/auth/signup">or Sign Up</a>
  </form>

  {{> flash}}
</div>

<div class="login-signup">
  <img class="escape-room-logo" src="https://res.cloudinary.com/drkujr1xv/image/upload/v1552472710/project_2_images/logo_rosa_pastel.png" alt="logo">
  <form class="center" method="POST" action="/auth/signup">
    <div class="field">
      {{!-- <label>Username</label> --}}
      <input type="text" placeholder="username" name="username"/>
    </div>

    <div class="field">
      {{!-- <label>Password</label> --}}
      <input type="password" placeholder="password" name="password"/>
    </div>

    <div class="field submit">
      <button class="join" type="submit">Signup</button>
    </div>
    <a href="/auth/login">or Login</a>
  </form>

  {{> flash}}
</div>
